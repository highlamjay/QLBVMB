<Window x:Class="QLBVMB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLBVMB"
        mc:Ignorable="d"    
             
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:uc ="clr-namespace:QLBVMB.User_control"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        
        Name="mainWindow"
        DataContext="{StaticResource MainVM}"
        Title="Phần mềm quản lý bán vé máy bay" Height="600" Width="1132">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedWindowCommand}" 
                                   CommandParameter="{Binding ElementName=mainWindow}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <uc:ControlBarUC Tag="{Binding Title, ElementName=mainWindow}"></uc:ControlBarUC>
        </Grid>
        <Grid Grid.Row="1">

            <materialDesign:Card>
                <TabControl x:Name="tcontrol"
                            materialDesign:ElevationAssist.Elevation="Dp8"
                            materialDesign:NavigationRailAssist.ShowSelectionBackground="True"
                            materialDesign:NavigationRailAssist.SelectionCornerRadius="20,20,20,20"
                            Style="{StaticResource MaterialDesignNavigationRailTabControl}"
                            VerticalContentAlignment="Stretch">

                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding SelectionChangedCommand}" 
                                CommandParameter="{Binding ElementName=tcontrol}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>

                    <TabItem Height="62" DataContext="{StaticResource AirportVM}">
                        <TabItem.Header>
                            <StackPanel Width="auto" Height="auto">
                                <materialDesign:PackIcon Width="24" Height="24" HorizontalAlignment="Center" Kind="Airport" />
                                <TextBlock HorizontalAlignment="Center" Text="Sân bay" FontSize="12"/>
                            </StackPanel>
                        </TabItem.Header>
                        <Grid>
                            <Grid.Background>
                                <LinearGradientBrush EndPoint="0.8,1" StartPoint="0,0">
                                    <GradientStop Color="White" Offset="0" />
                                    <GradientStop Color="DeepSkyBlue" Offset="1" />
                                </LinearGradientBrush>
                            </Grid.Background>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <materialDesign:Card Height="50" Width="430"
                                                 Margin="60,108,20,401"
                                                 materialDesign:ElevationAssist.Elevation="Dp8"
                                                 UniformCornerRadius="10"
                                                 Grid.Column="0" FontSize="18">
                                <TextBlock Margin="10" Text="Thiết lập sân bay" FontSize="22" FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Center" />
                            </materialDesign:Card>

                            <materialDesign:Card Width="430" Height="60"
                                                 Margin="60,174,20,325"
                                                 materialDesign:ElevationAssist.Elevation="Dp8"
                                                 UniformCornerRadius="25"
                                                 Grid.Column="0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" Text="{Binding Id_Airport, UpdateSourceTrigger=PropertyChanged}" Margin="20 5 10 10" materialDesign:HintAssist.Hint="Mã sân bay" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontSize="15" />
                                    <TextBox Grid.Column="1" Text="{Binding Name_Airport, UpdateSourceTrigger=PropertyChanged}" Margin="10 5 10 10" materialDesign:HintAssist.Hint="Tên sân bay" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontSize="15" />
                                    <ComboBox Grid.Column="2" Margin="10 5 20 8" DisplayMemberPath="Id_Locate" ItemsSource="{Binding LocateList}" SelectedItem="{Binding SelectedLocate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="Mã địa điểm" IsEditable="False" Style="{StaticResource MaterialDesignFloatingHintComboBox}" FontSize="15"></ComboBox>
                                </Grid>
                            </materialDesign:Card>

                            <materialDesign:Card Width="430" Height="60"
                                                 materialDesign:ElevationAssist.Elevation="Dp8"
                                                 UniformCornerRadius="25"
                                                 Grid.Column="0" Margin="60,248,20,255">
                                <WrapPanel>
                                    <Button materialDesign:ButtonAssist.CornerRadius="15,0,15,15" Command="{Binding AddAirportCommand}" Content="Thêm" Margin="16,8,8,5" Width="120" Height="40" FontSize="18"></Button>
                                    <Button materialDesign:ButtonAssist.CornerRadius="15,0,15,15" Command="{Binding EditAirportCommand}" Content="Sửa" Margin="8,8,8,5" Width="120" Height="40" FontSize="18"></Button>
                                    <Button materialDesign:ButtonAssist.CornerRadius="15,0,15,15" Command="{Binding DeleteAirportCommand}" Content="Xóa" Margin="8,8,16,5" Width="120" Height="40" FontSize="18"></Button>
                                </WrapPanel>
                            </materialDesign:Card>

                            <materialDesign:Card Margin="26,24,47,23"
                                                 UniformCornerRadius="30"
                                                 materialDesign:ElevationAssist.Elevation="Dp16"
                                                 Grid.Column="1">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <ListView ItemsSource="{Binding AirportList}" SelectedItem="{Binding AirportSelectedItem}" Width="auto" d:ItemsSource="{d:SampleData ItemCount=5}" HorizontalContentAlignment="Center" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="15,5,15,5" FontSize="16">
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Id_Airport}"></GridViewColumn>
                                                <GridViewColumn Header="Tên sân bay" DisplayMemberBinding="{Binding Name_Airport}"></GridViewColumn>
                                                <GridViewColumn Header="Mã địa điểm" DisplayMemberBinding="{Binding Locate.Id_Locate}"></GridViewColumn>
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                </ScrollViewer>
                            </materialDesign:Card>
                        </Grid>
                    </TabItem>
                    <TabItem Height="62" x:Name="tPlane" DataContext="{StaticResource PlaneVM}">
                        <TabItem.Header>
                            <StackPanel Width="auto" Height="auto">
                                <materialDesign:PackIcon Width="24" Height="24" HorizontalAlignment="Center" Kind="Airplane" />
                                <TextBlock HorizontalAlignment="Center" Text="Máy bay" FontSize="12"/>
                            </StackPanel>
                        </TabItem.Header>
                        <Grid>
                            <Grid.Background>
                                <LinearGradientBrush EndPoint="0.8,1" StartPoint="0,0">
                                    <GradientStop Color="White" Offset="0" />
                                    <GradientStop Color="#FFFF7070" Offset="1" />
                                </LinearGradientBrush>
                            </Grid.Background>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <materialDesign:Card Height="50" Width="430" Grid.Column="0" Margin="70,110,30,403"
                                                 materialDesign:ElevationAssist.Elevation="Dp8"
                                                 UniformCornerRadius="10"
                                                 FontSize="22">
                                <TextBlock Margin="10" Text="Thiết lập máy bay" FontSize="22" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" />
                            </materialDesign:Card>

                            <materialDesign:Card  Width="430" Height="60"
                                                  Grid.Column="0" Margin="70,176,30,327"
                                                  materialDesign:ElevationAssist.Elevation="Dp8"
                                                  UniformCornerRadius="25">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" FontSize="15" Text="{Binding Id_Plane, UpdateSourceTrigger=PropertyChanged}" Margin="20 5 10 10" materialDesign:HintAssist.Hint="Mã máy bay" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                    <TextBox Grid.Column="1" FontSize="15" Text="{Binding Type_Plane, UpdateSourceTrigger=PropertyChanged}" Margin="10 5 10 10" materialDesign:HintAssist.Hint="Tên máy bay" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                    <TextBox Grid.Column="2" FontSize="15" Text="{Binding Brand, UpdateSourceTrigger=PropertyChanged}" Margin="10 5 20 10" materialDesign:HintAssist.Hint="Hãng máy bay" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                </Grid>
                            </materialDesign:Card>

                            <materialDesign:Card Width="430" Height="60"
                                                 Grid.Column="0" Margin="70,248,30,255"
                                                 materialDesign:ElevationAssist.Elevation="Dp8"
                                                 UniformCornerRadius="25">
                                <WrapPanel>
                                    <Button materialDesign:ButtonAssist.CornerRadius="15,0,15,15" Command="{Binding AddPlaneCommand}" Content="Thêm" Margin="16,8,8,5" Width="120" Height="40" FontSize="18"></Button>
                                    <Button materialDesign:ButtonAssist.CornerRadius="15,0,15,15" Command="{Binding EditPlaneCommand}" Content="Sửa" Margin="8,8,8,5" Width="120" Height="40" FontSize="18"></Button>
                                    <Button materialDesign:ButtonAssist.CornerRadius="15,0,15,15" Command="{Binding DeletePlaneCommand}" Content="Xóa" Margin="8,8,16,5" Width="120" Height="40" FontSize="18"></Button>
                                </WrapPanel>
                            </materialDesign:Card>

                            <materialDesign:Card Grid.Column="1" 
                                                 Margin="26,24,47,23"
                                                 UniformCornerRadius="30"
                                                 materialDesign:ElevationAssist.Elevation="Dp16"
                                                 VerticalAlignment="Stretch">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <ListView Margin="15,5,15,5" ItemsSource="{Binding PlaneList}" SelectedItem="{Binding PlaneSelectedItem, Mode=OneWayToSource}" d:ItemsSource="{d:SampleData ItemCount=5}" 
                                              FontSize="16" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Id_Plane}"></GridViewColumn>
                                                <GridViewColumn Header="Tên máy bay" DisplayMemberBinding="{Binding Type_Plane}"></GridViewColumn>
                                                <GridViewColumn Header="Hãng máy bay" DisplayMemberBinding="{Binding Brand}"></GridViewColumn>
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                </ScrollViewer>
                            </materialDesign:Card>
                        </Grid>
                    </TabItem>
                    <TabItem Height="62" DataContext="{StaticResource FlightVM}">
                        <TabItem.Header>
                            <StackPanel Width="auto" Height="auto">
                                <materialDesign:PackIcon Width="24"
                                    Height="24"
                                    HorizontalAlignment="Center"
                                    Kind="AirplaneMarker" />
                                <TextBlock HorizontalAlignment="Center" Text="Chuyến bay" FontSize="12" />
                            </StackPanel>
                        </TabItem.Header>
                        <Grid>
                            <Grid.Background>
                                <LinearGradientBrush EndPoint="0.8,0.8" StartPoint="0,0.2">
                                    <GradientStop Color="White" Offset="0" />
                                    <GradientStop Color="#FF00CE4F" Offset="1" />
                                </LinearGradientBrush>
                            </Grid.Background>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="200"></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition Width="270" ></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="70"></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>

                                    <materialDesign:Card Grid.Row="0" Width="400" Height="50" Margin="5"
                                                         materialDesign:ElevationAssist.Elevation="Dp8"
                                                         UniformCornerRadius="10">
                                        <TextBlock Margin="10" Text="Thiết lập chuyến bay" FontSize="22" FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Center" />
                                    </materialDesign:Card>

                                    <materialDesign:Card Grid.Row="1" Width="auto" Margin="25,5,25,5"
                                                         materialDesign:ElevationAssist.Elevation="Dp8"
                                                         UniformCornerRadius="10">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>
                                                <RowDefinition></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <TextBox Grid.Column="0" FontSize="15" Margin="20,5,10,10" Text="{Binding Id_Flight, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="Mã chuyến bay" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                                <TextBox Grid.Column="1" FontSize="15" Margin="10,5,10,10" Text="{Binding Id_Plane, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="Mã máy bay" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                                <ComboBox Grid.Column="2" FontSize="15" Margin="10 5 10 8" DisplayMemberPath="Name_Airport" ItemsSource="{Binding AirportList}" SelectedItem="{Binding SelectedAirport, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="Nơi khởi hành" IsEditable="False" Style="{StaticResource MaterialDesignFloatingHintComboBox}"></ComboBox>
                                                <ComboBox Grid.Column="3" FontSize="15" Margin="10 5 20 8" DisplayMemberPath="Name_Airport" ItemsSource="{Binding AirportList1}" SelectedItem="{Binding SelectedAirport1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="Nơi kết thúc" IsEditable="False" Style="{StaticResource MaterialDesignFloatingHintComboBox}"></ComboBox>
                                            </Grid>
                                            <Grid Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <DatePicker Grid.Column="0" FontSize="15" VerticalAlignment="Center" SelectedDate="{Binding Time_Start}" Margin="20 5 10 8" materialDesign:HintAssist.Hint="Thời gian cất cánh" Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
                                                <DatePicker Grid.Column="1" FontSize="15" VerticalAlignment="Center" SelectedDate="{Binding Time_End}" Margin="10 5 10 8" materialDesign:HintAssist.Hint="Thời gian hạ cánh" Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
                                                <TextBox Grid.Column="2" FontSize="15" Text="{Binding Total_Seat, UpdateSourceTrigger=PropertyChanged}" Margin="10 5 20 10" materialDesign:HintAssist.Hint="Số lượng ghế" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                            </Grid>
                                        </Grid>
                                    </materialDesign:Card>
                                </Grid>

                                <materialDesign:Card Grid.Column="1" Width="220" Margin="5"
                                                     UniformCornerRadius="25"
                                                     materialDesign:ElevationAssist.Elevation="Dp8">
                                    <WrapPanel>
                                        <Button materialDesign:ButtonAssist.CornerRadius="25,25,10,10" Command="{Binding AddFlightCommand}"  Content="Lập lịch chuyến bay" Margin="20,10,20,5" Width="180" Height="50"></Button>
                                        <Button materialDesign:ButtonAssist.CornerRadius="10,10,10,10" Command="{Binding EditFlightCommand}" Content="Sửa lịch bay" Margin="20,5,20,5" Width="180" Height="50"></Button>
                                        <Button materialDesign:ButtonAssist.CornerRadius="10,10,25,25" Command="{Binding DeleteFlightCommand}" Content="Xóa lịch bay" Margin="20,5,20,10" Width="180" Height="50"></Button>
                                    </WrapPanel>
                                </materialDesign:Card>
                            </Grid>

                            <materialDesign:Card Grid.Row="1" Margin="20,10,20,20" VerticalAlignment="Stretch"
                                                 materialDesign:ElevationAssist.Elevation="Dp16"
                                                 UniformCornerRadius="10">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" Width="auto">
                                    <ListView Margin="10,10,10,10" ItemsSource="{Binding FlightList}" SelectedItem="{Binding FlightSelectedItem, Mode=OneWayToSource}" d:ItemsSource="{d:SampleData ItemCount=5}" 
                                              FontSize="16" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn Width="80" Header="Id" DisplayMemberBinding="{Binding Id_Flight}"></GridViewColumn>
                                                <GridViewColumn DisplayMemberBinding="{Binding Plane.Id_Plane}">
                                                    <GridViewColumnHeader Padding="8" Width="auto" Content="Mã Máy Bay"></GridViewColumnHeader>
                                                </GridViewColumn>
                                                <GridViewColumn DisplayMemberBinding="{Binding Airport.Name_Airport}">
                                                    <GridViewColumnHeader Padding="8" Width="auto" Content="Nơi khởi hành"></GridViewColumnHeader>
                                                </GridViewColumn>
                                                <GridViewColumn DisplayMemberBinding="{Binding Airport1.Name_Airport}">
                                                    <GridViewColumnHeader Padding="8" Width="auto" Content="Nơi kết thúc"></GridViewColumnHeader>
                                                </GridViewColumn>
                                                <GridViewColumn DisplayMemberBinding="{Binding Time_Start, StringFormat='dd/MM/yyyy'}">
                                                    <GridViewColumnHeader Padding="8" Width="auto" Content="Thời gian cất cánh"></GridViewColumnHeader>
                                                </GridViewColumn>
                                                <GridViewColumn DisplayMemberBinding="{Binding Time_End, StringFormat='dd/MM/yyyy'}">
                                                    <GridViewColumnHeader Padding="8" Width="auto" Content="Thời gian hạ cánh"></GridViewColumnHeader>
                                                </GridViewColumn>
                                                <GridViewColumn DisplayMemberBinding="{Binding Total_Seat}">
                                                    <GridViewColumnHeader Padding="8" Width="auto" Content="Số lượng ghế"></GridViewColumnHeader>
                                                </GridViewColumn>
                                                <GridViewColumn DisplayMemberBinding="{Binding Total_BookedSeat}">
                                                    <GridViewColumnHeader Padding="8" Width="auto" Content="Ghế đã đặt"></GridViewColumnHeader>
                                                </GridViewColumn>
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                </ScrollViewer>
                            </materialDesign:Card>
                        </Grid>
                    </TabItem>
                    <TabItem Height="62" DataContext="{StaticResource CustomerVM}">
                        <TabItem.Header>
                            <StackPanel Width="auto" Height="auto">
                                <materialDesign:PackIcon Width="24" Height="24" HorizontalAlignment="Center" Kind="CardAccountDetailsOutline" />
                                <TextBlock HorizontalAlignment="Center" Text="Khách hàng" FontSize="12"/>
                            </StackPanel>
                        </TabItem.Header>
                        <Grid>
                            <Grid.Background>
                                <LinearGradientBrush EndPoint="0.8,0.7" StartPoint="0,0.5">
                                    <GradientStop Color="White" Offset="0" />
                                    <GradientStop Color="#FF3771FF" Offset="1" />
                                </LinearGradientBrush>
                            </Grid.Background>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="200"></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition Width="230" ></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="70"></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>

                                    <materialDesign:Card Grid.Row="0" Width="400" Height="50" Margin="225,10,205,10"
                                                         materialDesign:ElevationAssist.Elevation="Dp8"
                                                         UniformCornerRadius="10">
                                        <TextBlock Margin="10" Text="Thông tin khách hàng" FontSize="22" FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Center" />
                                    </materialDesign:Card>

                                    <materialDesign:Card Grid.Row="1" Width="auto" Margin="35,5,25,5"
                                                         materialDesign:ElevationAssist.Elevation="Dp8"
                                                         UniformCornerRadius="10">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>
                                                <RowDefinition></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <TextBox Grid.Column="0" Text="{Binding Id_Customer, UpdateSourceTrigger=PropertyChanged}" Margin="20 5 10 10" materialDesign:HintAssist.Hint="Mã khách hàng" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontSize="15" />
                                                <TextBox Grid.Column="1" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="10 5 10 10" materialDesign:HintAssist.Hint="Tên khách hàng" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontSize="15" />
                                                <TextBox Grid.Column="2" Text="{Binding Age, UpdateSourceTrigger=PropertyChanged}" Margin="20 5 10 10" materialDesign:HintAssist.Hint="Tuổi" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontSize="15" />
                                                <TextBox Grid.Column="3" Text="{Binding Sex, UpdateSourceTrigger=PropertyChanged}" Margin="20 5 10 10" materialDesign:HintAssist.Hint="Giới tính" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontSize="15" />
                                            </Grid>
                                            <Grid Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <TextBox Grid.Column="0" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Margin="20 5 10 10" materialDesign:HintAssist.Hint="Email" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontSize="15" />
                                                <TextBox Grid.Column="1" Text="{Binding Tel, UpdateSourceTrigger=PropertyChanged}" Margin="20 5 10 10" materialDesign:HintAssist.Hint="Số điện thoại" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontSize="15" />
                                                <ComboBox Grid.Column="2" Margin="10 5 20 8" DisplayMemberPath="Name_Locate" ItemsSource="{Binding LocateList}" SelectedItem="{Binding SelectedLocate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="Địa chỉ" IsEditable="False" Style="{StaticResource MaterialDesignFloatingHintComboBox}" FontSize="15"></ComboBox>

                                            </Grid>
                                        </Grid>
                                    </materialDesign:Card>
                                </Grid>

                                <materialDesign:Card Grid.Column="1" Width="140" Height="165" Margin="25,17,65,17"
                                                     UniformCornerRadius="25"
                                                     materialDesign:ElevationAssist.Elevation="Dp8">
                                    <WrapPanel>
                                        <Button materialDesign:ButtonAssist.CornerRadius="25,25,10,10" Command="{Binding AddCustomerCommand}" Content="Thêm" Margin="20,10,20,5" Width="100" Height="40" FontSize="15" materialDesign:ElevationAssist.Elevation="Dp8"></Button>
                                        <Button materialDesign:ButtonAssist.CornerRadius="10,10,10,10" Command="{Binding EditCustomerCommand}" Content="Sửa" Margin="20,5,20,5" Width="100" Height="40" FontSize="15" materialDesign:ElevationAssist.Elevation="Dp8"></Button>
                                        <Button materialDesign:ButtonAssist.CornerRadius="10,10,25,25" Command="{Binding DeleteCustomerCommand}" Content="Xóa" Margin="20,5,20,10" Width="100" Height="40" FontSize="15" materialDesign:ElevationAssist.Elevation="Dp8"></Button>
                                    </WrapPanel>
                                </materialDesign:Card>
                            </Grid>

                            <materialDesign:Card Grid.Row="1" Margin="30,10,30,20" VerticalAlignment="Stretch"
                                                 materialDesign:ElevationAssist.Elevation="Dp16"
                                                 UniformCornerRadius="10">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" Width="auto">
                                    <ListView Margin="10,10,10,10" ItemsSource="{Binding CustomerList}" SelectedItem="{Binding CustomerSelectedItem, Mode=OneWayToSource}" d:ItemsSource="{d:SampleData ItemCount=5}" FontSize="16" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id_Customer}"></GridViewColumn>
                                                <GridViewColumn Width="150" DisplayMemberBinding="{Binding Name}">
                                                    <GridViewColumnHeader Padding="0" Width="auto" Content="Tên khách hàng" HorizontalContentAlignment="Center"/>
                                                </GridViewColumn>
                                                <GridViewColumn Width="70" DisplayMemberBinding="{Binding Age}">
                                                    <GridViewColumnHeader Padding="0" Width="auto" Content="Tuổi" HorizontalContentAlignment="Center"/>
                                                </GridViewColumn>
                                                <GridViewColumn Width="80" DisplayMemberBinding="{Binding Sex}">
                                                    <GridViewColumnHeader Padding="0" Width="auto" Content="Giới tính" HorizontalContentAlignment="Center"/>
                                                </GridViewColumn>
                                                <GridViewColumn Width="150" DisplayMemberBinding="{Binding Email}">
                                                    <GridViewColumnHeader Padding="0" Width="auto" Content="Email" HorizontalContentAlignment="Center"/>
                                                </GridViewColumn>
                                                <GridViewColumn Width="150" DisplayMemberBinding="{Binding Tel}">
                                                    <GridViewColumnHeader Padding="0" Width="auto" Content="Số điện thoại" HorizontalContentAlignment="Center"/>
                                                </GridViewColumn>
                                                <GridViewColumn Width="150" DisplayMemberBinding="{Binding Locate1.Name_Locate}">
                                                    <GridViewColumnHeader Padding="0" Width="auto" Content="Địa chỉ" HorizontalContentAlignment="Center"/>
                                                </GridViewColumn>
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                </ScrollViewer>
                            </materialDesign:Card>
                        </Grid>
                    </TabItem>
                    <TabItem DataContext="{StaticResource TicketVM}" Height="62">
                        <TabItem.Header>
